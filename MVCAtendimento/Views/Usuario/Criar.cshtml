@model MVCAtendimento.Models.Usuario

@{
	ViewData["Title"] = "Criar Novo Usuario";
}

<h1> Criar Novo Usuario</h1>

<hr />

<div class="row">
	<div class="col-md-4">
		<form asp-action="Criar">
			<div class="form-group">
				<label asp-for="Nome" class="control-label"></label>
				<input asp-for="Nome" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="AbreviacaoNome" class="control-label"></label>
				<input asp-for="AbreviacaoNome" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Descricao" class="control-label"></label>
				<input asp-for="Descricao" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="TipoUsuarioId" class="control-label"></label>
				<input asp-for="TipoUsuarioId" class="form-control" />
			</div>

			<br />
			<div class="form-group">
				<input type="submit" value="Criar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
</hr>
<br />
<div>
	<a asp-action="Index">Voltar</a>
</div>